# Server Configuration
PORT=3000
NODE_ENV=development

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# LinkedIn API Configuration
# Get your access token from: https://www.linkedin.com/developers/
# Follow the OAuth 2.0 flow to obtain an access token with w_member_social scope
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token_here

# LinkedIn Person URN
# Format: urn:li:person:XXXXXXXXXX
# You can get this from the LinkedIn API /me endpoint after authentication
LINKEDIN_PERSON_URN=urn:li:person:your_person_id_here

# API Configuration
API_VERSION=v1
