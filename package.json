{
  "name": "linked-in-post-bot",
  "version": "1.0.0",
  "description": "Express API server with Bun runtime featuring Gemini AI integration",
  "main": "src/server.ts",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target bun",
    "type-check": "tsc --noEmit",
    "daily-post": "bun src/scripts/daily-post.ts"
  },
  "keywords": [
    "bun",
    "express",
    "gemini",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "@google/generative-ai": "^0.2.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/morgan": "^1.9.9",
    "bun-types": "latest"
  }
}
